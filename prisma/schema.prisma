generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(ADMIN)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  assignedLeads Lead[]     @relation("LeadAssignee")
  blogPosts     BlogPost[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Service {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String   @db.Text
  shortDesc   String?
  features    String[] @default([])
  advantages  String[] @default([])
  price       String?
  priceFrom   Int?
  priceTo     Int?
  image       String?
  gallery     String[] @default([])
  icon        String?
  bgColor     String?
  popular     Boolean  @default(false)
  active      Boolean  @default(true)
  order       Int      @default(0)
  
  // SEO fields
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  portfolioItems PortfolioItem[]
}

model PortfolioItem {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  shortDesc   String?
  category    String
  categoryColor String?
  image       String
  gallery     String[] @default([])
  result      String?
  budget      String?
  duration    String?
  year        Int?
  rating      Float?   @default(5.0)
  features    String[] @default([])
  tags        String[] @default([])
  popular     Boolean  @default(false)
  active      Boolean  @default(true)
  order       Int      @default(0)
  
  // Client info
  clientName    String?
  clientWebsite String?
  clientLogo    String?
  
  // SEO fields
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  serviceId String?
  service   Service? @relation(fields: [serviceId], references: [id])
}

model BlogPost {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  content     String      @db.Text
  excerpt     String?
  image       String?
  gallery     String[]    @default([])
  tags        String[]    @default([])
  category    String?
  status      PostStatus  @default(DRAFT)
  publishedAt DateTime?
  
  // SEO fields
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  
  // Analytics
  views       Int @default(0)
  readingTime Int @default(5)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Author
  authorId String
  author   User   @relation(fields: [authorId], references: [id])
}

model Lead {
  id        String     @id @default(cuid())
  name      String
  email     String?
  phone     String?
  message   String?    @db.Text
  source    String?    // откуда пришла заявка
  type      LeadType   @default(CONTACT)
  status    LeadStatus @default(NEW)
  priority  Priority   @default(MEDIUM)
  
  // Дополнительные поля для калькулятора
  serviceType String?
  budget      String?
  deadline    String?
  details     Json?
  
  // UTM метки
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmContent  String?
  utmTerm     String?
  
  // IP и геолокация
  ipAddress String?
  country   String?
  city      String?
  
  // Обработка
  assignedTo String?
  assignee   User?   @relation("LeadAssignee", fields: [assignedTo], references: [id])
  notes      String? @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SEOSettings {
  id    String @id @default(cuid())
  page  String @unique // главная, услуги, портфолио и т.д.
  
  // Основные мета-теги
  title       String?
  description String?
  keywords    String?
  
  // Open Graph
  ogTitle       String?
  ogDescription String?
  ogImage       String?
  ogType        String? @default("website")
  
  // Twitter
  twitterCard   String? @default("summary_large_image")
  twitterTitle  String?
  twitterDesc   String?
  twitterImage  String?
  
  // Дополнительные настройки
  canonicalUrl String?
  noindex      Boolean @default(false)
  nofollow     Boolean @default(false)
  
  // Schema.org разметка
  schemaMarkup Json?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text
  type  String @default("string") // string, number, boolean, json
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Analytics {
  id        String   @id @default(cuid())
  page      String
  event     String   // pageview, form_submit, click, etc.
  data      Json?
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
}

// Enums
enum Role {
  ADMIN
  MANAGER
  EDITOR
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum LeadType {
  CONTACT
  QUOTE
  CALCULATOR
  CALLBACK
  NEWSLETTER
}

enum LeadStatus {
  NEW
  CONTACTED
  IN_PROGRESS
  CONVERTED
  CLOSED
  SPAM
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
} 