# Базовые настройки Next.js
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=https://your-domain.ru
NEXTAUTH_SECRET=change_me

# База данных (PostgreSQL)
# Вариант 1: Локальный PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/kvartett

# Вариант 2: Neon (serverless PostgreSQL, бесплатно до 0.5GB)
# DATABASE_URL=postgresql://username:password@ep-xxx.region.aws.neon.tech/kvartett?sslmode=require

# Вариант 3: Supabase (бесплатно до 500MB)
# DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# Вариант 4: Vercel Postgres (бесплатно для hobby проектов)
# DATABASE_URL=postgres://default:xxx@xxx.postgres.vercel-storage.com/verceldb

DATABASE_URL=postgresql://username:password@localhost:5432/kvartett

# Телеграм
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Любые внешние ключи/токены сюда


